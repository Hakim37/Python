    "def anagram(word1,word2):\n",
    "    word1 = word1.lower()\n",
    "    word2 = word2.lower()\n",
    "    return sorted(word1) == sorted(word2)\n",
    "\n",
    "print(anagram(\"cinema\",\"iceman\"))\n",
    "print(anagram(\"cool\",\"loco\"))\n",
    "print(anagram(\"men\",\"women\"))\n"
   ]
